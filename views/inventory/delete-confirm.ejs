
<main class="container delete-inventory-container">
  <h1>Delete Vehicle</h1>
  <p>Confirm Deletion â€” This action is <strong>permanent</strong>.</p>

  <% if (flashMessage) { %>
    <div class="alert alert-success"><%= flashMessage %></div>
  <% } %>

  <% if (errors && errors.length) { %>
    <div class="alert alert-error">
      <ul>
        <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form id="deleteForm" action="/inv/delete" method="post">
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>
    </div>

    <div class="form-group">
      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>
    </div>

    <div class="form-group">
      <label for="inv_year">Year</label>
      <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>
    </div>

    <div class="form-group">
      <label for="inv_price">Price</label>
      <input type="text" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly>
    </div>

    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <div class="form-group">
      <button type="submit" class="delete-btn">Delete Vehicle</button>
    </div>
  </form>
</main>

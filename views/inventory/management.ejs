<main class="container">
  <!-- Flash messages -->
  <% if (messages && Object.keys(messages).length > 0) { %>
    <% Object.keys(messages).forEach(type => { %>
      <% messages[type].forEach(msg => { %>
        <div class="flash-message <%= type %>"><%= msg %></div>
      <% }) %>
    <% }) %>
  <% } %>

  <h1>Inventory Management</h1>

  <!-- Management options -->
  <div class="management-options">
    <p>Select an option below:</p>
    <ul>
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
    </ul>
  </div>

  <!-- Manage Inventory Section -->
  <h2>Manage Inventory</h2>
  <p>Select a classification to see inventory items below.</p>

  <!-- Classification select list -->
  <form id="classificationForm">
    <div class="drop-down">
      <label for="classificationList">Classification:</label>
      <%- classificationSelect %>
    </div>
  </form>

  <!-- Inventory table -->
  <table id="inventoryDisplay" class="inventory-table">
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <!-- JS will populate this -->
    </tbody>
  </table>

  <noscript>
    <p>JavaScript must be enabled to use this page.</p>
  </noscript>
</main>

<!-- Link to your JS -->
<script src="/js/management.js"></script>


<!-- views/account/login.ejs -->
<!-- Login Page -->
<main class="login-container">
  <!-- Page Title -->
  <h2><%= title %></h2>
  
  <%- messages() %>

  <!-- Login Form -->
  <form action="/account/login" method="post" class="login-form">
    <!-- Email Input -->
    <label for="accountemail">Email</label><br>
    <input type="email" id="email" name="account_email" placeholder="Enter your email" required><br>


    <!-- Password Input -->
    <label for="accountpassword">Password</label>
    <input type="password" id="account_password" name="account_password" placeholder="Enter your password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <!-- Submit Button -->
    <button type="submit">Login</button>

  </form>

  <!-- Registration Link -->
  <p class="register-link">
    Don't have an account? <br>
    <a href="/account/register">Register here</a>
  </p>

</main>


<!-- views/account/login.ejs -->
<!-- Login Page -->
<main class="login-container">
  <!-- Page Title -->
  <h2><%= title %></h2>
  
  <%- messages() %>

  <!-- Login Form -->
  <form action="/account/login" method="post" class="login-form">
    <!-- Email Input -->

    <label for="Email">Email</label><br>
    <input type="email" id="email" name="account_email" placeholder="Enter your email" required><br>
    <!-- Password Input -->
    <label for="password">Password</label><br>
    <input type="password" id="password" name="account_password" placeholder="Enter your password" required><br>

    <!-- Submit Button -->
    <button type="submit">Login</button>

  </form>

  <!-- Registration Link -->
  <p class="register-link">
    Don't have an account? <br>
    <a href="/account/register">Register here</a>
  </p>

</main>


<!-- // Account management view -->

<% if (loggedin && account) { %>
  <section class="account-info">
    <h2>Welcome, <%= account.account_firstname %>!</h2>
    <p><strong>Email:</strong> <%= account.account_email %></p>
    <p><strong>Account Type:</strong> <%= account.account_type %></p>

    <div class="account-actions">
      <a href="/account/update/<%= account.account_id %>" class="btn btn-primary">Update Account Information</a>
      <a href="/account/logout" class="btn btn-secondary">Log Out</a>
    </div>
  </section>

  <% if (account.account_type === 'Employee' || account.account_type === 'Admin') { %>
    <section class="inventory-management">
      <h3>Inventory Management</h3>
      <p><a href="/inv/management" class="btn btn-outline">Go to Inventory Management</a></p>
    </section>
  <% } %>

<% } else { %>
  <section class="login-prompt">
    <p>Please <a href="/account/login">log in</a> to access your account.</p>
  </section>
<% } %>
